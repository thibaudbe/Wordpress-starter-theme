{% include 'header.twig' %}
{% block head %}
{% endblock %}
</head>
<body class="{{body_class}}" data-source="base.twig">

	<header class="header" >
		{% block header %}
		<div class="wrapper">

			<h1 class="hdr-logo" role="banner">
				<a class="" href="{{bloginfo('url')}}/#!/" title="" rel="home">{{bloginfo('name')}}</a>
			</h1>
			<a id="retour" href="{{bloginfo('url')}}/#!/">&larr; retour</a>

			<nav id="access" class="main-navigation" role="navigation">
				<ul>
				{% for item in menu.items %}
					<li id="menu-item-{{item.ID}}" class="menu-item menu-item-type-{{item.type}} menu-item-object-{{item.object}} menu-item-{{item.ID}}">
						<a href="{{item.link}}">{{item.title}}</a>
					</li>
				{% endfor %}
				</ul>
			</nav>

		</div>
		{% endblock %}
	</header>


	<section id="content" role="main" class="content-wrapper">      
		{% if title %}
			<h1>
				{{title}}
			</h1>
		{% endif %}
		
		<div id="ajaxContent" class="wrapper {{sidebar_class}}">
			{% block content %}
				Sorry, no content...
			{% endblock %}
		</div>
		{% if sidebar %}
			<aside class="layout-sidebar">
				{{sidebar}}
			</aside>
		{% endif %}
	</section>


	<footer id="footer">
		{% include 'footer.twig' %}
	</footer>


	{{ function('wp_footer') }}
</body>
</html>